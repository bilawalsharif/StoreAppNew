<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.StartActivity">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/app_logo_"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"/>
    <TextView
        android:id="@+id/txtSignIn"
        android:textStyle="bold"
        android:padding="@dimen/_1sdp"
        android:textAllCaps="true"
        android:text="@string/signup"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_below="@id/txtSignIn"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/enter_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etLastName"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:inputType="textEmailAddress"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/email_address"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etPassword"
                    android:inputType="textPassword"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/enter_password"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:inputType="textPassword"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etCellNo"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/enter_cell_no"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/sp_languages"
                    android:layout_gravity="center"
                    android:entries="@array/languages_array"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/enter_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_1sdp"
                android:layout_margin="@dimen/_1sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/sp_category"
                    android:layout_gravity="center"
                    android:entries="@array/store_categories_array"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/edit_text_shape"
                    android:layout_weight="1"
                    android:hint="@string/enter_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
            <LinearLayout
                android:onClick="login"
                android:padding="1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:elevation="@dimen/_5sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/alread_have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
                <TextView
                    android:elevation="@dimen/_5sdp"
                    android:textStyle="bold|italic|normal"
                    android:textColor="@color/red"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnRegister"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:background="@drawable/button_blue"
                    android:text="@string/next"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>